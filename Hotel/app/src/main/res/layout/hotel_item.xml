<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Hotel_item">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:id="@+id/iv_foto"
        android:src="@drawable/icon_hotel"></ImageView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nama Hotel"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="13dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:scrollbarSize="18dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:id="@+id/txt_nama"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Hotel"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="9dp"
        android:scrollbarSize="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:id="@+id/txt_alamat"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ubah"
            android:layout_marginRight="5dp"
            android:text="Ubah"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semi_bold"
            android:backgroundTint="@color/orange_muda"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_hapus"
            android:layout_marginLeft="5dp"
            android:text="Hapus"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semi_bold"
            android:backgroundTint="@color/orange_muda"></Button>
    </LinearLayout>


</LinearLayout>